            <Button x:Name="navButton_converter" Content="Przelicznik" HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="176" Background="#FF242E3A" BorderBrush="{x:Null}" Foreground="White" IsTabStop="False" FontFamily="Century Gothic" FontSize="18" Click="navButton_Click" Style="{DynamicResource ButtonStyle1}" Margin="0,160,0,0"/>
            <Button x:Name="navButton_author" Content="Autor" HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="176" Background="#FF242E3A" BorderBrush="{x:Null}" Foreground="White" IsTabStop="False" FontFamily="Century Gothic" FontSize="18" Click="navButton_Click" Style="{DynamicResource ButtonStyle1}" Margin="0,240,0,0"/>
            <Button x:Name="navButton_main" Content="Główna" HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="176" Background="#FF242E3A" BorderBrush="{x:Null}" Foreground="White" IsTabStop="False" FontFamily="Century Gothic" FontSize="18" Click="navButton_Click" Style="{DynamicResource ButtonStyle1}"/>
